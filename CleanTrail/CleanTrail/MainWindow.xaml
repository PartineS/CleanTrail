<Window x:Class="CleanTrail.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Title}" Height="470" Width="800" 
        Background="{DynamicResource MainBgBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- İz Türü Seçimi ve Ayarlar -->
        <StackPanel Grid.Column="0" Margin="10" Background="#FAFAFA">
            <TextBlock FontWeight="Bold" FontSize="16" Text="{DynamicResource CleanupTypes}" Margin="0,0,0,14"/>
            <CheckBox x:Name="chkRecent" Content="{DynamicResource RecentFiles}" IsChecked="True"/>
            <CheckBox x:Name="chkQuick" Content="{DynamicResource QuickAccess}" IsChecked="True"/>
            <CheckBox x:Name="chkThumb" Content="{DynamicResource ThumbnailCache}" IsChecked="True"/>
            <CheckBox x:Name="chkFolders" Content="{DynamicResource FolderHistory}" IsChecked="False" Checked="chkFolders_Checked" Unchecked="chkFolders_Unchecked"/>
            <CheckBox x:Name="chkChrome" Content="{DynamicResource ChromeHistory}" IsChecked="False"/>
            <CheckBox x:Name="chkEdge" Content="{DynamicResource EdgeHistory}" IsChecked="False"/>
            <CheckBox x:Name="chkFirefox" Content="{DynamicResource FirefoxHistory}" IsChecked="False"/>
            <CheckBox x:Name="chkOpera" Content="{DynamicResource OperaHistory}" IsChecked="False"/>
            <Separator Margin="0,10,0,10"/>
            <CheckBox x:Name="chkAutostart" Content="{DynamicResource Autostart}" Checked="chkAutostart_Checked" Unchecked="chkAutostart_Unchecked"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="{DynamicResource BtnThemeLight}" Width="60" Margin="0,0,5,0" Click="btnThemeLight_Click"/>
                <Button Content="{DynamicResource BtnThemeDark}" Width="60" Click="btnThemeDark_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="TR" Width="40" Margin="0,0,5,0" Click="btnLangTr_Click"/>
                <Button Content="EN" Width="40" Click="btnLangEn_Click"/>
            </StackPanel>
            <Separator Margin="0,10,0,10"/>
            <Button Content="{DynamicResource BtnStart}" Width="170" Margin="0,0,0,10" Click="btnStart_Click"/>
            <TextBlock Name="tbStatus" Text="{DynamicResource StatusIdle}" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Klasör Listesi ve Ekleme -->
        <StackPanel Grid.Column="1" Margin="20,10,10,10">
            <StackPanel x:Name="spFolders" Visibility="Collapsed">
                <TextBlock FontWeight="Bold" Text="{DynamicResource FoldersToWatch}" Margin="0,0,0,6"/>
                <Button Name="btnAddFolder" Content="{DynamicResource BtnAddFolder}" Width="120" Margin="0,0,0,6" Click="btnAddFolder_Click"/>
                <ListBox Name="lbFolders" Height="120" Margin="0,0,0,10"/>
            </StackPanel>
            <TextBlock FontWeight="Bold" Text="{DynamicResource LogTitle}" Margin="0,10,0,6"/>
            <ScrollViewer Height="140">
                <TextBox Name="tbLog" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
