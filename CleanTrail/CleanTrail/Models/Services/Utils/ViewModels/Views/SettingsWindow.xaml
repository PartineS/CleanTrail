<Window x:Class="CleanTrail.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ayarlar" Height="250" Width="350">
    <StackPanel Margin="20">
        <TextBlock FontWeight="Bold" FontSize="16" Text="Temizlik Tercihleri" Margin="0,0,0,12"/>
        <CheckBox x:Name="chkRecent" Content="Recent Files Silinsin" IsChecked="True"/>
        <CheckBox x:Name="chkQuickAccess" Content="Quick Access Silinsin" IsChecked="True"/>
        <CheckBox x:Name="chkThumb" Content="Thumbnail Cache Silinsin" IsChecked="True"/>
        <Button Content="Kaydet" Click="BtnSave_Click" Margin="0,18,0,0"/>
    </StackPanel>
</Window>